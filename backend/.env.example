# LLM API Configuration - Add your API keys here
# Get your API keys from:
# - Google Gemini (RECOMMENDED): https://makersuite.google.com/app/apikey
# - Groq (Fast & Free): https://console.groq.com/keys  
# - OpenAI: https://platform.openai.com/api-keys
# - Anthropic: https://console.anthropic.com/

# Google Gemini (Recommended for best balance of cost, performance, and reliability)
GOOGLE_API_KEY=your_google_api_key_here
DEFAULT_LLM_PROVIDER=google
DEFAULT_MODEL=gemini-1.5-flash

# Alternative providers (optional - only one API key is required)
GROQ_API_KEY=your_groq_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Application Settings
DEBUG=false
LOG_LEVEL=INFO

# Groq specific model configuration
GROQ_MODEL=llama-3.1-8b-instant

# Database Configuration
DATABASE_URL=sqlite:///./data_analysis.db

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Session Settings
SESSION_TIMEOUT=3600
SESSION_SECRET=your-session-secret-key-here

# File Upload Settings
MAX_FILE_SIZE=10MB
ALLOWED_FILE_TYPES=csv,xlsx,xls
UPLOAD_DIR=./uploads