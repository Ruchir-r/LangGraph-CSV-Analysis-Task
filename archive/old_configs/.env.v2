# ================================
# LangGraph Configuration
# ================================
LANGGRAPH_CHECKPOINT_STORE=redis
LANGGRAPH_MAX_ITERATIONS=10
LANGGRAPH_TIMEOUT=300
ENABLE_GRAPH_TRACING=true

# ================================
# File Upload Settings
# ================================
MAX_FILE_SIZE=100MB
ALLOWED_FILE_TYPES=csv,xlsx,xls
UPLOAD_DIR=./uploads
MAX_FILES_PER_SESSION=50
ENABLE_FILE_COMPRESSION=true

# ================================
# Multi-temporal Analysis Settings
# ================================
ENABLE_CROSS_TABLE_ANALYSIS=true
MAX_TIME_PERIODS=24
DEFAULT_TIME_GRANULARITY=monthly
ENABLE_TREND_DETECTION=true
ENABLE_ANOMALY_DETECTION=true

# ================================
# Session & Security
# ================================
SESSION_TIMEOUT=7200
SESSION_SECRET=your-super-secret-session-key-v2
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRATION=3600

# ================================
# Celery & Background Tasks
# ================================
CELERY_BROKER_URL=redis://:redis_password_2024@localhost:6379/1
CELERY_RESULT_BACKEND=redis://:redis_password_2024@localhost:6379/2
CELERY_TASK_TIMEOUT=600
CELERY_MAX_RETRIES=3

# ================================
# Monitoring & Observability
# ================================
ENABLE_PROMETHEUS=true
PROMETHEUS_PORT=9090
ENABLE_GRAFANA=true
GRAFANA_PORT=3001
LOG_FORMAT=json
ENABLE_TRACE_LOGGING=true

# ================================
# Performance & Scaling
# ================================
WORKER_PROCESSES=4
MAX_CONCURRENT_REQUESTS=1000
CONNECTION_POOL_SIZE=100
CACHE_TTL=3600
ENABLE_REQUEST_CACHING=true

# ================================
# Advanced Analytics
# ================================
ENABLE_SCIKIT_LEARN=true
ENABLE_STATSMODELS=true
ENABLE_PROPHET_FORECASTING=true
MAX_CORRELATION_MATRIX_SIZE=1000
ENABLE_AUTO_ML=false

# ================================
# Development & Testing
# ================================
ENVIRONMENT=development
ENABLE_HOT_RELOAD=true
TEST_DATABASE_URL=postgresql+asyncpg://test_user:test_pass@localhost:5432/test_data_analysis_v2
ENABLE_MOCK_LLM=false